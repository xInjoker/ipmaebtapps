rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow any authenticated user to read roles and branches
    match /roles/{roleId} {
      allow read: if request.auth != null;
    }
    
    match /branches/{branchId} {
      allow read: if request.auth != null;
    }

    // Users can read/update their OWN document, but not others.
    // Listing all users is restricted to specific roles (handled by application logic).
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }
    
    // Other collections can be read/written by any authenticated user.
    // This is a temporary rule to get the app working.
    // We can tighten this up later based on specific requirements.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
