
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reading roles for any authenticated user
    match /roles/{roleId} {
      allow read: if request.auth != null;
      allow write: if false; // Roles are managed manually or by admin
    }

    // Allow public read for branches for the sign-up page
    match /branches/{branchId} {
      allow read: if true;
    }

    // Users can read/write to their own document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny for other collections for now, except for super-admin
    match /{document=**} {
      allow read, write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roleId == 'super-admin';
    }
  }
}
