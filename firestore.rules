rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check for admin role
    function isAdmin() {
      // Check for a custom claim 'isAdmin' on the user's auth token.
      // This must be set via a backend process (e.g., Cloud Function).
      return request.auth.token.isAdmin == true;
    }

    // Users can create their own user document, and can only read/update their own.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // Allow all authenticated users to read roles
    match /roles/{roleId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    // Allow all users (authenticated or not) to read branches for the sign-up page
    match /branches/{branchId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Allow admin to manage all other collections, but deny by default for others
    match /{document=**} {
      allow read, write: if isAdmin();
    }
  }
}
