rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read on branches for the sign-up page
    match /branches/{branchId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    // Allow public read on roles for the sign-up page
    match /roles/{roleId} {
      allow read: if true;
      allow write: if request.auth != null; // Only authenticated users can write
    }

    // Default catch-all for any other collection.
    // Requires a user to be authenticated to read or write.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
